<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!--Кнопка при нажатии: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_color" />
            <corners android:radius="35dp" />
            <stroke android:width="3dp" android:color="@color/button_stroke_color" />
        </shape>
    </item>

    <item android:state_enabled="true"> <!--Кнопка статичная: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/description_note_bg" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>