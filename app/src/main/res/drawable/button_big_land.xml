<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_numbers_pressed" />
            <corners android:radius="555dp" />
            <stroke android:width="3dp" android:color="@color/button_numbers_pressed_stroke" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/button_counting_gradient_end" android:startColor="@color/button_counting_gradient_start" android:type="linear" />
            <corners android:radius="555dp" />
            <stroke android:width="3dp" android:color="@color/button_numbers_stroke" />
        </shape>
    </item>

</selector>