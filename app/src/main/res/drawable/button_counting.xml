<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_counting_stroke" />
            <corners android:radius="555dp" />
            <stroke android:width="3dp" android:color="@color/top_part_end_gradient" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_color" />
            <corners android:radius="555dp" />
            <stroke android:width="3dp" android:color="@color/button_counting_stroke" />
        </shape>
    </item>

</selector>