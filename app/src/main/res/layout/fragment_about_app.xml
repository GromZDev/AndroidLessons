<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutAppFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/menu_toolbar_description_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Lesson_8_Notes.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_about_fragment"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/toolbar_bg"
            app:popupTheme="@style/Theme.Lesson_8_Notes.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/text_view_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/TOP_margin"
        android:fontFamily="@font/walter_turncoat"
        android:gravity="center"
        android:text="@string/text_in_aboutApp"
        android:textSize="@dimen/aboutApp_text_size"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back_from_aboutApp"
        style="@style/MyButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="56dp"
        android:layout_marginTop="@dimen/TOP_margin"
        android:text="@string/back" />


</LinearLayout>

