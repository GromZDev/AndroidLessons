<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_menu"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/note_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/myNote_application"
        android:src="@drawable/note_icon"
        app:layout_constraintBottom_toTopOf="@id/tw"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/walter_turncoat"
        android:text="@string/mynote_app"
        android:textColor="#444444"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/note_img" />

</androidx.constraintlayout.widget.ConstraintLayout>