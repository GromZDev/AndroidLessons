<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyNoteItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:id="@+id/item_note_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/my_note_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/walter_turncoat"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintStart_toEndOf="@id/item_note_image"
        app:layout_constraintTop_toTopOf="@id/item_note_image"
        tools:text="Note Name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_note_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/walter_turncoat"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_note_name"
        tools:text="Note Theme" />

</androidx.constraintlayout.widget.ConstraintLayout>